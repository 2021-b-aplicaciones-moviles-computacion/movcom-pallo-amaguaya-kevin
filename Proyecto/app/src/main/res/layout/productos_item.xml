<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="176dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_nombre_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="20dp"
        card_view:layout_constraintStart_toEndOf="@+id/imageView"
        card_view:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/item_cantidad_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="1unidad"
        android:textColor="@color/black_500"
        android:textSize="16dp"
        card_view:layout_constraintEnd_toEndOf="@+id/item_nombre_producto"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="@+id/item_nombre_producto"
        card_view:layout_constraintTop_toBottomOf="@+id/item_nombre_producto" />

    <TextView
        android:id="@+id/item_precio_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="precio"
        android:textColor="@color/black_500"
        android:textSize="16dp"
        card_view:layout_constraintEnd_toEndOf="@+id/item_cantidad_producto"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="@+id/item_cantidad_producto"
        card_view:layout_constraintTop_toBottomOf="@+id/item_cantidad_producto" />
</androidx.constraintlayout.widget.ConstraintLayout>