<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_First"
        android:layout_width="329dp"
        android:layout_height="69dp"
        android:layout_marginTop="252dp"
        android:background="@color/colorBackground_v1"
        android:paddingLeft="20px"
        android:paddingTop="40px"
        android:paddingEnd="40px"
        android:paddingRight="20px"
        android:text="@string/hola_mundo"
        android:textColor="@color/color_v1"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="CONTINUAR"
        app:layout_constraintEnd_toEndOf="@+id/textView_First"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textView_First"
        app:layout_constraintTop_toBottomOf="@+id/textView_First" />

    <Button
        android:id="@+id/btn_ir_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="List View"
        app:layout_constraintEnd_toEndOf="@+id/button_Continuar"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/button_Continuar"
        app:layout_constraintTop_toBottomOf="@+id/button_Continuar" />

    <Button
        android:id="@+id/btn_intent"
        android:layout_width="185dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:text="intent"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_list_view"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_list_view"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_list_view" />

    <Button
        android:id="@+id/btn_ir_intent_implicto"
        android:layout_width="124dp"
        android:layout_height="78dp"
        android:layout_marginBottom="52dp"
        android:text="intent implicito"
        app:layout_constraintBottom_toTopOf="@+id/textView_First"
        app:layout_constraintEnd_toEndOf="@+id/textView_First"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/textView_First" />

</androidx.constraintlayout.widget.ConstraintLayout>